<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:m="urn:import:gwt.material.design.client.ui">

	<ui:style>
	.spheresx {
		background-color: blue;
		width: 50%;
		position: absolute !important;
		height: 100%;
		left: 0px;
		top: 0px;
	}
	
	.spheredx {
		background-color: yellow;
		width: 50%;
		position: absolute !important;
		height: 100%;
		right: 0px;
		top: 0px;
	}
	</ui:style>

	<ui:with field='res'
		type='hello.stori.es.client.resources.MaterialResources' />

	<g:HTMLPanel height="100%" ui:field="sParent">
		<g:SimpleLayoutPanel styleName="{style.spheresx}"
			ui:field="sphereSX">
		</g:SimpleLayoutPanel>
		<g:SimpleLayoutPanel styleName="{style.spheredx}"
			ui:field="sphereDX">
		</g:SimpleLayoutPanel>
	</g:HTMLPanel>
</ui:UiBinder>